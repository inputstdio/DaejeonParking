<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="AppTheme_black" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Black</item>
        <item name="colorAccent">@color/colorPrimary_Black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomAlertDialog_Rounded" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog</item>
    </style>
    <style name="CustomAlertDialog_Rounded_Black" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary_Black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Black</item>
        <item name="colorAccent">@color/colorPrimary_Black</item>
        <item name="android:windowBackground">@drawable/rounded_dialog_dark</item>
    </style>
</resources>
